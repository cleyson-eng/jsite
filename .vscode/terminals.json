{
    "autorun": true,
    "autokill": true,
    "terminals": [
        {
            "name": "SERVER",
            "description": "run server",
			"recycle": true,
            "open": true,
            "focus": true,
            "icon": "server-environment",
            "commands": [
                "deno run --allow-all serv.ts"
            ]
        },
        {
            "name": "SASS",
            "description": "SASS transpiler",
            "open": true,
            "focus": false,
            "icon":"screen-normal",
            "color":"terminal.ansiMagenta",
            "commands": [
                "sass --watch transp/sass:tout"
            ]
        },
        {
            "name": "PUG",
            "description": "PUG transpiler",
            "open": true,
            "focus": false,
            "icon":"symbol-parameter",
            "color":"terminal.ansiYellow",
            "commands": [
                "pug -w transp/pug -o tout --basedir transp/pug"
            ]
        },
        {
            "name": "TSC",
            "description": "Typescript transpiler",
            "open": true,
            "focus": false,
            "icon":"symbol-module",
            "color":"terminal.ansiCyan",
            "commands": [
                "tsc -w"
            ]
        }
    ]
}